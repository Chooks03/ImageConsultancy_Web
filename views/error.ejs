<% layout('layout') -%>

<div class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="text-center">
        <div class="w-32 h-32 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-8">
            <i class="fas fa-exclamation-triangle text-red-600 text-4xl"></i>
        </div>
        
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Oops! Something went wrong</h1>
        <p class="text-xl text-gray-600 mb-8 max-w-md mx-auto">
            <%= message || 'An unexpected error occurred. Please try again later.' %>
        </p>
        
        <% if (process.env.NODE_ENV === 'development' && error) { %>
            <div class="bg-gray-100 rounded-lg p-4 mb-8 text-left max-w-2xl mx-auto">
                <h3 class="font-semibold text-gray-800 mb-2">Error Details (Development Mode):</h3>
                <pre class="text-sm text-gray-600 overflow-auto"><%= error.stack %></pre>
            </div>
        <% } %>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/" class="gradient-bg text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
                <i class="fas fa-home mr-2"></i>Go Home
            </a>
            <button onclick="history.back()" class="bg-gray-100 text-gray-800 px-6 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>Go Back
            </button>
        </div>
    </div>
</div>
